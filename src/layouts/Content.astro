---
import Layout from './Layout.astro'

interface Props {
  title: string
}
---

<Layout title={Astro.props.title}>
  <div class="content bg-white p-4 md:p-8">
    <slot />
  </div>
</Layout>

<style is:global>
  @reference "../assets/style.css";

  .content {
    h3 {
      @apply mt-8 mb-2 text-lg font-medium md:text-xl;
    }

    h4 {
      @apply mt-8 mb-2 font-medium md:text-lg;
    }

    h5 {
      @apply mt-4 mb-1 font-medium;
    }

    p {
      @apply my-2;
    }

    a:not(.btn) {
      @apply text-purple-600 underline hover:text-purple-700;
    }
  }
</style>
